generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//mypage/プロフィール欄のデータ構造
model User {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  deletedAt　DateTime?
  headerImageUrl String @default("")
  iconImageUrl String @default("")
  nickname String
  myNationality String @default("")
  partnerNationality String @default("")
  introduction String @default("")
}

//投稿機能のデータ構造
model Post {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  deletedAt　DateTime?
  title String
  description String
}